<tr class="hds-table__tr" ...attributes>
  {{#if @isSelectable}}
    <Hds::Table::ThSelectable
      @isSelected={{@isSelected}}
      @selectionScope={{@selectionScope}}
      @selectionKey={{if this.selectionKey this.selectionKey ""}}
      @selectionAriaLabelSuffix={{if @selectionAriaLabelSuffix @selectionAriaLabelSuffix ""}}
      @didInsertAll={{@didInsertAll}}
      @didInsertRow={{@didInsertRow}}
      @willDestroyAll={{@willDestroyAll}}
      @willDestroyRow={{@willDestroyRow}}
      @onSelectionAllChange={{@onSelectionAllChange}}
      @onSelectionRowChange={{@onSelectionRowChange}}
    />
  {{/if}}

  {{yield}}
</tr>